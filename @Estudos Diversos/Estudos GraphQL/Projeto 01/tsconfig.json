{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext", 
    "moduleResolution": "node",
    "esModuleInterop": true,

    "rootDir": "src", 
    "outDir": "dist", 
    
    "forceConsistentCasingInFileNames": true,           
    
    "strict": true,
    "skipLibCheck": true,

    "types": ["node"]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]

}
