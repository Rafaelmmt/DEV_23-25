{
  "compilerOptions": {
    
    "target": "ES2020",
    "lib": ["es2020"],
    "module": "esnext", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],

    "rootDir": "src", 
    "outDir": "dist", 
    
    "forceConsistentCasingInFileNames": true,           
    
    "strict": true,
    "skipLibCheck": true,
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]

}